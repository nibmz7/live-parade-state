  "main": "index.js",
  "dependencies": {
    "firebase-functions": "^3.6.1",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "es-dev-server": "^1.57.3",
    "mocha": "^8.1.2",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "rollup": "^2.26.5",
    "typescript": "^4.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "eslint": "^6.1.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "prettier": "^2.0.4",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "deepmerge": "^3.2.0",
    "@open-wc/testing": "^2.0.0"
  },
  "scripts": {
    "test old": "echo \"Error: no test specified\" && exit 1",
    "build-old": "npx webpack --config webpack.config.js",
    "start-dev-server": "firebase serve --host 0.0.0.0",
    "start-emulators": "firebase emulators:start --import=./firestore-db",
    "deploy-hosting": "firebase deploy --only hosting",
    "test": "karma start --coverage",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:tests": "tsc --build test --watch",
    "build:tests:clean": "tsc --build --clean test",
    "test:karma": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "watch": "",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "concurrently --kill-others --names tsc,karma \"npm run tsc:watch\" \"karma start --auto-watch=true --single-run=false\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nurilyas7/live-parade-state.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nurilyas7/live-parade-state/issues"
  },
  "homepage": "https://github.com/nurilyas7/live-parade-state#readme",
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
