{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM"],
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "strict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "ui/*": ["ui/*"],
      "model/*": ["model/*"],
      "data/*": ["data/*"],
      "data-firebase/*": ["data-firebase/*"],
      "data-mock/*": ["data-mock/*"]
    }
  },
  "include": ["./model/**/*.ts","./test/**/*.ts"],
  "exclude": [],
}
